<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/list_bg1"
     >
        <LinearLayout
            android:id="@+id/linitem_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="15.2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:id="@+id/job_no"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_field_bg4"
                    android:gravity="center"
                    android:text="12"
                    android:maxWidth="0dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:id="@+id/job_title"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_field_bg2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxWidth="0dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            <TextView
                android:id="@+id/job_builder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/edit_field_bg2"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="0dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:id="@+id/job_city"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_field_bg3"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxWidth="0dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:id="@+id/job_status"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_field_bg2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxWidth="0dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_weight="4.2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/update_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_gray"
                        android:padding="7dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/viewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:padding="7dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="View Details"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/receivePO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/green"
                        android:padding="7dp"
                        android:gravity="center"
                        android:text="PO Receive"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                </LinearLayout>

        </LinearLayout>

</RelativeLayout>
