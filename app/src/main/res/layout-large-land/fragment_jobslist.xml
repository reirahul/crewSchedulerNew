<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/dateNavigator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/previous_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:src="@drawable/previous_arrow"/>

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="March 30, 2016"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_date"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/next_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linitem_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateNavigator"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:weightSum="15"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/jobNoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="No."
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="4"
                android:singleLine="true"
                android:id="@+id/nameTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="2"
                android:singleLine="true"
                android:id="@+id/builderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Builder"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="2"
                android:singleLine="true"
                android:id="@+id/cityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="City"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <TextView
                android:layout_weight="2"
                android:singleLine="true"
                android:id="@+id/statusTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <TextView
                android:layout_weight="4"
                android:singleLine="true"
                android:id="@+id/dueItemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/light_gray"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Action"
                android:textColor="@color/white"
                android:textSize="15sp"
                />


        </LinearLayout>
    <ListView
        android:id="@+id/jobs_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/linitem_heading"
        android:choiceMode="singleChoice"
        android:divider="@null">
    </ListView>
</RelativeLayout>