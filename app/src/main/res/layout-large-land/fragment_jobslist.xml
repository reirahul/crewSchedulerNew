<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/dateNavigator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/previous_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:src="@drawable/previous_arrow"/>

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="March 30, 2016"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_date"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/next_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/red_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@id/dateNavigator"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Previous Jobs Incompleted"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <ListView
        android:id="@+id/jobs_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/red_header"
        android:choiceMode="singleChoice"
        android:divider="@null">
    </ListView>
</RelativeLayout>