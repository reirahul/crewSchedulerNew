<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/list_bg2">

        <!--1st Row-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Work Order"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/work_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@+id/textView"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="8dp"
            android:text="General Contractor"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/general_contractor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@+id/textView2"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--2nd Row-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="8dp"
            android:text="Sales Order No"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sales_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/work_order"
            android:layout_alignTop="@+id/textView3"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/work_order"
            android:layout_marginLeft="500dp"
            android:text="Additional Hours"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/additional_hrs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/general_contractor"
            android:layout_alignTop="@+id/textView4"
            android:background="@drawable/additional_hrs_bg"
            android:inputType="number"
            android:maxLength="4"
            android:maxWidth="0dp"
            android:onClick="clear"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textAlignment="center"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/additional_hrs_text"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/add_hrs_drop_btn"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/request_hrs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/additional_hrs_text"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/additional_hrs_text"
            android:background="@drawable/request_qty_btn" />

        <!--3rd Row-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="Order Type"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sales_order"
            android:layout_alignTop="@id/textView5"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:text="Work Location"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/work_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/additional_hrs_text"
            android:layout_alignTop="@id/textView6"
            android:textColor="@color/font_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/maps_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/work_location"
            android:background="@drawable/maps_detail_icon" />

        <!--4th Row-->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="8dp"
            android:text="Notes"
            android:textColor="@color/font_color"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/request_hrs_button"
            android:layout_alignStart="@+id/order_type"
            android:layout_alignTop="@id/textView7">

            <TextView
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textColor="@color/font_color"
                android:textSize="20sp"
                android:textStyle="bold" />
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tab1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab1_states" />
            >

            <ImageView
                android:id="@+id/tab2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab2_states" />

            <ImageView
                android:id="@+id/tab3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab3_states" />

            <ImageView
                android:id="@+id/tab4_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab4_states" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_bg2">

    </RelativeLayout>


</LinearLayout>