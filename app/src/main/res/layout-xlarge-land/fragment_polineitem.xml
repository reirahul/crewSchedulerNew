<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iconsolutions.crewschedular.PMFeedbackFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/lineitems_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="@color/list_bg2"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:id="@+id/header"-->
        <!--android:layout_width="@dimen/lineitems_width"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:background="@drawable/lineitems_header"/>-->

        <ListView
            android:id="@+id/po_line_item_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/ll1"
            android:background="@color/list_bg2">

        </ListView>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:gravity="center">
        <Button
            android:id="@+id/polineitems_prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/previous_button" />
         </LinearLayout>

    </RelativeLayout>

</LinearLayout>
